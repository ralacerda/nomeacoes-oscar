---
import Layout from "@/layouts/Layout.astro";
import { getMovies, getMovieBySlug } from "@/utils/getData";
import MovieCardAward from "@/components/MovieCardAward.astro";

const allMovies = Object.keys(getMovies());
---

<Layout title="Categorias Oscar 2022">
  {
    allMovies.sort().map((slug) => {
      const movie = getMovieBySlug(slug);
      return (
        <>
          <MovieCardAward slug={slug} currentAward="" />
        </>
      );
    })
  }
</Layout>
